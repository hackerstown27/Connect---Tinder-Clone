<%- include("partials/header") -%>

    <div class="container mt-4">
        <div class="row mx-2 my-md-0">
            <div class="col-6 col-md-1">
                <img class="search-icon" src="icons/results.svg" alt="">    
            </div>
            <div class="col-6">
                <h1 class="search-heading">Search Results</h1>    
            </div>
            <div class="col-md">
                <form action="/search" method="POST">
                  <div class="input-group my-3">
                      <input type="text" name="searchQuery" class="form-control" placeholder="Search" autocomplete="off" required>
                      <div class="input-group-append">
                          <button class="btn btn-outline-secondary" type="submit" id="button-addon2"><i class="fas fa-search"></i></button>
                      </div>
                  </div>
              </form>
            </div>
        </div>
        <div class="container mt-4">
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                  <% if(searchResults.length != 0) { %>
                  <% searchResults.forEach(function(result) { %>
                      <div class="carousel-item">
                      <div class="card mx-auto pt-2 mb-5 search-card">
                          <img src="icons/avatar/<%=result.Avatar%>" style="height: 250px;" class="card-img-top p-3" alt="...">
                          <div class="card-body">
                            <h5 class="card-title"><%=result.Name%></h5>
                            <p class="card-text">
                                  <table class="table table-hover table-borderless">
                                      <tr>
                                          <th scope="row">Course</th>
                                          <td><%=result.Course%></td>
                                      </tr>
                                      <tr>
                                          <th scope="row">Branch</th>
                                          <td><%=result.Branch%></td>
                                      </tr>
                                  </table>
                             </p>
                            <form action="/matchReq" method="POST">
                              <input type="hidden" name="matchUserId" value=<%=result.Email%>>
                              <button class="btn btn-outline-danger btn-block">Match</button>
                            </form>
                          </div>
                        </div>
                    </div>
                  <%})%>
                  <% } else { %>
                    <div class="carousel-item active mt-5">
                      <div class="card mx-auto pt-2" style="width: 20rem;">
                          <img src="icons/404.svg" style="height: 200px;" class="card-img-top p-3" alt="...">
                          <div class="card-body">
                            <h5 class=" my-3 py-3 card-title text-center text-monospace text-danger">Sorry! We Were Not Able To Find.</h5>
                          </div>
                        </div>
                    </div>
                  <% } %>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                  <img class="control-arrow" src="icons/mleft.svg" alt="">
                  <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                  <img class="control-arrow" src="icons/mright.svg" alt="">
                  <span class="sr-only">Next</span>
                </a>
              </div>
        </div>
    </div>

    <script>
      document.querySelector(".carousel-item").classList.add("active");
    </script>


<%- include("partials/footer") -%>