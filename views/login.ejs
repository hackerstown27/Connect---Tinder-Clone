<%- include("partials_2/header") -%>
	<div class="limiter">
		<div class="container-login100">
			<div class="wrap-login100 p-l-50 p-r-50 p-t-77 p-b-30">
				<% if (message.length != 0) { %>
					<div class="alert alert-danger" role="alert">
						<%=message%>
					  </div>
				<% } %>
				<form class="login100-form" action="/login" method="POST">
					<span class="login100-form-title p-b-55">
						Login
					</span>

					<div class="wrap-input100 m-b-16" data-validate = "Valid email is required: ex@abc.xyz">
						<input class="input100" type="email" name="email" placeholder="Email" required>
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<span class="lnr lnr-envelope"></span>
						</span>
					</div>

					<div class="wrap-input100 m-b-16" data-validate = "Password is required">
						<input class="input100" type="password" name="password" placeholder="Password" required>
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<span class="lnr lnr-lock"></span>
						</span>
					</div>
					
					<div class="container-login100-form-btn p-t-25">
						<button type="submit" class="login100-form-btn">
							Login
						</button>
					</div>

					<div class="text-center w-full p-t-80">
						<span class="txt1">
							Not a member?
						</span>

						<a class="txt1 bo1 hov1" href="/register">
							Sign up now							
						</a>
						<br><br>
						<span class="txt1">
							Forget Your Password?
						</span>

						<a class="txt1 bo1 hov1" href="/forgetPassword">
							Reset Password							
						</a>
					</div>
				</form>
			</div>
		</div>
	</div>
<%- include("partials_2/header") -%>