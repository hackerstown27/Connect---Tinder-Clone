<%- include("partials_2/header") -%>
	<div class="limiter">
		<div class="container-login100">
			<div class="wrap-login100 p-l-50 p-r-50 p-t-77 p-b-30">
				<% if (message.length != 0) { %>
				<div class="alert alert-dark" role="alert">
					<%=message%>
				  </div>
				<% } %>
				<div id="message-box">

				</div>
				<form class="login100-form validate-form" id="form" action="/register" method="POST">
					<span class="login100-form-title p-b-55">
						Register
					</span>
						<div class="wrap-input100 validate-input m-b-16">
							<input class="input100" id="rollNoField" type="number" name="rollNo" placeholder="AKTU ROLL NO." autocomplete="off" required>
							<span class="focus-input100"></span>
							<span class="symbol-input100">
								<span class="lnr lnr-envelope"></span>
							</span>
						</div>

						<div class="container-login100-form-btn p-t-25">
							<button class="login100-form-btn" id="submitBtn">
								Register
							</button>
						</div>

					<div class="text-center w-full p-t-115">
						<span class="txt1">
							Already Have An Account?
						</span>

						<a class="txt1 bo1 hov1" href="/login">
							Sign In Now							
						</a>
						<br>
						<br>
						<span class="txt1">
							This App Is Only Designed For G.L. Bajaj Institute Of Engineering & Management (B.Tech 1st Year)
						</span>
					</div>
				</form>
			</div>
		</div>
	</div>

	<script>
		document.querySelector("#form").addEventListener("submit", function(evt){
			var rollNo = document.querySelector("#rollNoField").value;
			var re = /190192\d{7}$/g;
			if (!re.test(Number(rollNo))){
				evt.preventDefault();
				document.querySelector("#message-box").innerHTML = '<div class="alert alert-danger">Please Enter Correct Roll No!</div>';
			}
		});
	</script>
<%- include("partials_2/header") -%>